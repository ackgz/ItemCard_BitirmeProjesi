<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka2"
    tools:context=".Yardim">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nasıl Kullanılır?"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="36sp" />

            <Button
                android:id="@+id/button45"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="#00FFFFFF" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="KAYIT OL VE GİRİŞ YAP"
                android:textColor="#FFFFFF"
                android:textSize="24sp" />

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="229dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="300dp"
                    android:layout_height="164dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/kayit_ol" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="KAYIT OL EKRANINDA BULUNAN MAİL ADRESİ VE SİFRE KISIMLARINI ALANLARI BOŞ BIRAKMADAN DOLDURDUKTAN SONRA EĞER İŞLEMİ HATASIZ GERÇEKLEŞTİRİRSENİZ KARŞINIZA KAYIT OLUNDU UYARISI ÇIKACAKTIR. BU UYARI ÇIKTIKTAN SONRA GİRİŞ EKRANINDAN KULLANDIĞINIZ MAİL ADRESİ VE ŞİFREYİ KULLANARAK GİRİŞ YAPABİLİRSİNİZ."
                    android:textColor="#FFFFFF" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="225dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="86dp"
                    android:layout_weight="1"
                    android:text="ÜRÜNÜ NASIL SEPETE EKLERİM?"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView19"
                        android:layout_width="328dp"
                        android:layout_height="128dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/satin_al" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="SATILAN HER ÜRÜNÜN YANINDA BİR BUTON BULUNMAKTADIR. BU BUTONLARIN ÜZERİNDE FİYAT VEYA ALINAN ÜRÜNÜN İSMİ YAZMAKTADIR. ALMAK İSTEDİĞİNİZ ÜRÜNÜN BUTONUNA BASILDIĞINDA ÜRÜNÜNÜZ SEPETİNİZE EKLENECEKTİR."
                        android:textColor="#FFFFFF" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="66dp"
                    android:layout_weight="1"
                    android:lineSpacingExtra="24sp"
                    android:text="ÜRÜNLERİ NASIL SATIN ALIRIM?"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="270dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView20"
                        android:layout_width="match_parent"
                        android:layout_height="129dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sepet2" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="BU GÖRSEL SİZİN SEPET SAYFASINA GİTMENİZİ SAĞLAYACAN BUTONUN GÖRSELİDİR. SATIN ALMA SAYFALARINDA SAĞ ÜSTTE BULUNMAKTADIR. OLASI DURUMLARDA BU BUTON ÇALIŞMAZSA ÜÇ NOKTA ŞEKLİNDE BULUNAN MENÜ KISMINDAN DA SEPET SAYFASINA ULAŞARAK ÖDEME YAPABİLİR VE ÜRÜNLERİNİZİN KODUNU ALABİLİRSİNİZ."
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>