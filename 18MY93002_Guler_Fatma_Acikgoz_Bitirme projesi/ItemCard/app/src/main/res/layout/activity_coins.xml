<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arka2"
    tools:context=".Coins">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button10"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="#00FFFFFF" />

                <Button
                    android:id="@+id/sepet"
                    android:layout_width="51dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/sepet2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    app:srcCompat="@drawable/lol" />

                <TextView
                    android:id="@+id/lolcyazi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOL COINS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/lolcfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₺100"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/lolcoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#585151"
                    android:text="Satın Al" />
            </LinearLayout>

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="167dp"
                    app:srcCompat="@drawable/division" />

                <TextView
                    android:id="@+id/divisioncyazi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="DİVİSİON COINS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/divisioncfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="₺100"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/divisioncoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#585151"
                    android:text="Satın Al" />
            </LinearLayout>

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="166dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/forza" />

                <TextView
                    android:id="@+id/forzacyazi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="FORZA COINS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/forzacfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₺150"
                    android:textAlignment="center"
                    android:textColor="#FAFFFFFF"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/forzacoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#585151"
                    android:text="Satın Al" />
            </LinearLayout>

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#00FFFFFF" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="177dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/red" />

                <TextView
                    android:id="@+id/redcyazi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="RED DEAD COINS"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/redcfiyat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="₺200"
                    android:textAlignment="center"
                    android:textColor="#F8FFFFFF"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/redcoins"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#585151"
                    android:text="Satın Al" />

            </LinearLayout>

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:background="#00FFFFFF" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>